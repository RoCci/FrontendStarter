<section class="js-loginData p-loginData">
    <h2 class="p-loginData__title" id="anchor-mainLoginForm">{{title}}</h2>
    <p>{{text}}</p>
    <div class="p-loginData__text-wrapper">
        {{#each items}}
            <div class="p-loginData__textboxes">
                {{#each this}}
                    <div class="row">
                        {{#each row}}
                            {{#with col}}
                                <div class="col col--{{size}}">
                                    {{#with div}}
                                        <div class="js-{{class}} a-{{class}}">
                                            {{#if input}}
                                                <input class="js-{{class}}__input a-{{class}}__input"
                                                    {{#with input}}
                                                       type="{{type}}"
                                                           {{#if hasPlaceholder}}
                                                       placeholder="{{id}}*"
                                                           {{/if}}
                                                       id="{{id}}"
                                                           {{#if name}}
                                                       name="{{name}}"
                                                           {{/if}}
                                                           {{#if size}}
                                                       size="{{size}}"
                                                       maxlength="{{size}}"
                                                           {{/if}}
                                                    {{/with}}
                                                >
                                            {{/if}}
                                            <label class="js-{{class}}__label a-{{class}}__label"
                                                {{#if input}}
                                                   for="{{input.id}}"
                                                {{/if}}>
                                                {{label.value}}
                                            </label>
                                        </div>
                                    {{/with}}
                                </div>
                            {{/with}}
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>
</section>
