{
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "json"
  ],
  "parser": "babel-eslint",
  "rules": {
    "array-bracket-spacing": [2, "always"],
    "block-scoped-var": 2,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true } ],
    "camelcase": 1,
    "computed-property-spacing": [2, "always"],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "keyword-spacing": [2],
    "max-depth": [1, 3],
    "max-len": [1, 120],
    "max-statements": [1, 30],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "object-curly-spacing": [2, "always"],
    # "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "space-unary-ops": 2
  }
}
